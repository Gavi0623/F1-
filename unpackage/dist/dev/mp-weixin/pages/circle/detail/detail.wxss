.detail {
  background: #f8f8f8;
  min-height: calc(100vh - 0px);
}
.detail .container {
  padding: 30rpx;
  background: #fff;
}
.detail .container .userinfo {
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}
.detail .container .userinfo .avatar {
  width: 60rpx;
  height: 60rpx;
  padding-right: 15rpx;
}
.detail .container .userinfo .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.detail .container .userinfo .text {
  font-size: 28rpx;
  color: #555;
}
.detail .container .userinfo .text .small {
  font-size: 20rpx;
  color: #999;
}
.detail .container .userinfo .text .small .province {
  margin-left: 15rpx;
}
.detail .container .title {
  font-size: 46rpx;
  color: #333;
  line-height: 1.4em;
  font-weight: 600;
}
.detail .container .content {
  padding-top: 20rpx;
}
.detail .container .content image {
  width: 100%;
}
.detail .container .like {
  display: flex;
  align-items: center;
  padding: 30rpx 0 10rpx;
}
.detail .container .like text {
  padding: 0 8rpx;
  word-wrap: break-word;
  word-break: break-all;
  overflow-wrap: break-word;
}
.detail .container .like .active {
  color: #fa3534;
}
.detail .container .comment {
  padding-bottom: 120rpx;
}
.detail .container .comment .comment-header {
  display: flex;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
  margin-bottom: 10rpx;
}
.detail .container .comment .comment-header .comment-num {
  flex: 1;
}
.detail .container .comment .comment-header .subsection {
  width: 40%;
}
.detail .container .comment .item {
  padding: 10rpx 0;
}

